{
  "name": "tailv",
  "author": "jaskang",
  "version": "0.1.11",
  "license": "MIT",
  "type": "module",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "files": [
    "dist"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./preset": {
      "types": "./dist/preset.d.ts",
      "require": "./dist/preset.cjs",
      "import": "./dist/preset.js"
    }
  },
  "scripts": {
    "dev": "npm-run-all --parallel preset:dev docs:dev",
    "docs:dev": "vitepress dev site",
    "docs:build": "vitepress build site",
    "docs:preview": "vitepress preview site",
    "release": "release-it --only-version",
    "build": "vite build && tsup",
    "preset:build": "tsup",
    "preset:dev": "tsup --watch",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "@floating-ui/vue": "^1.0.6",
    "@jaskang/tsconfig": "^1.0.1",
    "@vueuse/core": "^10.9.0",
    "kotl": "^2.1.3",
    "mitt": "^3.0.1"
  },
  "devDependencies": {
    "@ctrl/tinycolor": "^4.1.0",
    "@heroicons/vue": "^2.1.3",
    "@release-it/conventional-changelog": "^8.0.1",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.13",
    "@types/jsdom": "^21.1.6",
    "@types/mdast": "^4.0.4",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "@vitejs/plugin-vue": "^5.0.4",
    "@vitejs/plugin-vue-jsx": "^3.1.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-vue": "^9.26.0",
    "globals": "^15.3.0",
    "happy-dom": "^14.11.0",
    "lucide-vue-next": "^0.379.0",
    "mdast-util-from-markdown": "^2.0.0",
    "mdast-util-frontmatter": "^2.0.1",
    "mdast-util-to-markdown": "^2.1.0",
    "micromark-extension-frontmatter": "^2.0.0",
    "mini-svg-data-uri": "^1.4.4",
    "npm-run-all": "^4.1.5",
    "postcss-import": "^16.1.0",
    "prettier": "^3.2.5",
    "prettier-plugin-tailwindcss": "^0.5.14",
    "release-it": "^17.3.0",
    "rimraf": "^5.0.7",
    "tailwindcss": "^3.4.3",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "unist-util-visit": "^5.0.0",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^3.9.1",
    "vite-plugin-inspect": "^0.8.4",
    "vite-plugin-vue-devtools": "^7.2.1",
    "vitepress": "1.2.2",
    "vitest": "^1.6.0",
    "vue": "^3.4.27",
    "vue-eslint-parser": "^9.4.2",
    "vue-router": "^4.3.2"
  },
  "peerDependencies": {
    "vue": "^3.4.0"
  },
  "peerDependencyRules": {
    "ignoreMissing": [
      "@algolia/client-search",
      "search-insights"
    ]
  },
  "engines": {
    "pnpm": ">=8.0.0"
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v${version}"
    },
    "github": {
      "release": true
    },
    "hooks": {
      "after:bump": "pnpm run build"
    }
  }
}
