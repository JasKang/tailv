{
  "name": "tailv",
  "version": "1.0.0-beta.0",
  "packageManager": "pnpm@8.5.1",
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "build": "vite build",
    "vue-tsc": "vue-tsc --declaration --emitDeclarationOnly",
    "build-types": "vue-tsc --declaration --emitDeclarationOnly tsconfig.build.json && api-extractor run -c api-extractor.json && rimraf dist/src",
    "preview": "vite preview",
    "test:unit": "vitest --environment jsdom --root src/",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit -p tsconfig.vitest.json --composite false",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "@heroicons/vue": "^2.0.18",
    "@tw-classed/core": "^1.4.4",
    "pinia": "^2.1.3",
    "vue": "^3.3.4",
    "vue-router": "^4.2.1",
    "vue-types": "^5.0.3"
  },
  "devDependencies": {
    "@jaskang/config": "^1.0.0",
    "@jaskang/eslint-config": "^0.0.7",
    "@microsoft/api-extractor": "^7.34.9",
    "@tailwindcss/aspect-ratio": "^0.4.2",
    "@tailwindcss/forms": "^0.5.3",
    "@types/jsdom": "^21.1.1",
    "@types/node": "^20.2.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "@vitejs/plugin-vue-jsx": "^3.0.1",
    "@vue/test-utils": "^2.3.2",
    "@vue/theme": "^2.2.1",
    "@vue/tsconfig": "^0.4.0",
    "autoprefixer": "^10.4.14",
    "eslint": "^8.40.0",
    "jsdom": "^22.0.0",
    "postcss": "^8.4.23",
    "postcss-import": "^15.1.0",
    "prettier": "^2.8.8",
    "prettier-plugin-tailwindcss": "^0.3.0",
    "rimraf": "^5.0.1",
    "sass": "^1.62.1",
    "tailwindcss": "^3.3.2",
    "typescript": "^5.0.4",
    "unocss": "^0.51.13",
    "vite": "^4.3.8",
    "vite-plugin-inspect": "^0.7.26",
    "vite-plugin-markdown-preview": "^1.0.4",
    "vitepress": "1.0.0-alpha.76",
    "vitest": "^0.31.1",
    "vue-tsc": "^1.6.5"
  },
  "pnpm": {
    "peerDependencyRules": {
      "ignoreMissing": [
        "@algolia/client-search"
      ]
    }
  }
}
